# Maintainer: Chad "crossroads1112" Sharp <crossroads1112@riseup.net>
pkgname=lumina-de-git
pkgver=r248.7b8dbef
pkgrel=1
pkgdesc="Lightweight QT Desktop Environment written for PC-BSD"
arch=('x86_64' 'i686')
url="https://github.com/pcbsd/lumina"
license=('BSD')
depends=('qt4' 'qt5-base' 'qt5-svg' 'qtchooser' 'qt5-tools' 'phonon-qt5' 'phonon-qt4' 'libxcomposite' 'libxdamage' 'libxrender' 'fluxbox' 'oxygen' 'oxygen-icons' 'xscreensaver')
optdepends=('xbacklight: required for changing screen brightness' 'alsa-utils: required for adjusting audio volume' 'acpi: required for monitoring battery life' 'numlockx: required for changign state of numlock at login' 'pavucontrol: required for detatched audio mixer')
makedepends=('gcc')
source=(git+https://github.com/pcbsd/lumina.git)
md5sums=(SKIP)


build(){
    cd $srcdir/lumina
    qmake PREFIX="$srcdir/usr" QT5LIBDIR=/usr/lib/qt
    make
}

package() {
    cd $srcdir/lumina
    make install
    cp -ar $srcdir/usr $pkgdir
}

pkgver() {
  cd "$srcdir/lumina"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}
